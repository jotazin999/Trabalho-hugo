    <footer>
        <div class="social-links">
            <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
            <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
            <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
            <a href="#" title="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const navLinks = document.querySelectorAll('.nav-link');
            const pageSections = document.querySelectorAll('.page-section');
            const hamburgerMenu = document.getElementById('hamburger-menu');
            const navUl = document.querySelector('nav ul');

            // Função para mostrar uma seção e ocultar as outras
            function showSection(targetId) {
                // Oculta todas as seções
                pageSections.forEach(section => {
                    section.classList.remove('active');
                });

                // Mostra a seção desejada
                const activeSection = document.querySelector(targetId);
                if (activeSection) {
                    activeSection.classList.add('active');
                    // Rola o conteúdo da seção para o topo, se ele tiver rolagem interna
                    const sectionContent = activeSection.querySelector('.section-content');
                    if (sectionContent) {
                        sectionContent.scrollTop = 0;
                    }
                }
            }

            // Função para ativar o link de navegação
            function activateNavLink(targetId) {
                navLinks.forEach(link => {
                    link.classList.remove('active-nav');
                    if (link.getAttribute('href') === targetId) {
                        link.classList.add('active-nav');
                    }
                });
            }

            // Event Listener para os links de navegação
            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault(); // Impede o comportamento padrão do link (rolagem ou navegação)

                    const targetId = link.getAttribute('href');
                    showSection(targetId); // Mostra a seção correspondente
                    activateNavLink(targetId); // Ativa o link no menu

                    // Se o menu hambúrguer estiver aberto, fecha-o após o clique
                    if (navUl.classList.contains('active')) {
                        navUl.classList.remove('active');
                    }
                });
            });

            // Event Listener para o botão "Ver Nossos Cursos" na seção Hero
            const heroButton = document.querySelector('.hero .button');
            if (heroButton) {
                heroButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    const targetId = heroButton.getAttribute('href');
                    showSection(targetId);
                    activateNavLink(targetId);
                });
            }

            // Funcionalidade dos Botões "Saiba Mais" dos Cursos
            const courseButtons = document.querySelectorAll('.course-button');

            courseButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const courseName = button.dataset.course; // Obtém o valor do atributo data-course
                    alert(`Você clicou em "Saiba Mais" para o curso de ${formatCourseName(courseName)}! Em um site real, isso levaria a uma página de detalhes do curso, ou a um modal de informações.`);
                });
            });

            // Função auxiliar para formatar o nome do curso (ex: 'programacao-iniciantes' -> 'Programação para Iniciantes')
            function formatCourseName(name) {
                return name
                    .split('-')
                    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
                    .join(' ');
            }

            // Validação Básica de Formulário de Contato (Front-end)
            const contactForm = document.querySelector('.contact-form');

            contactForm.addEventListener('submit', (e) => {
                e.preventDefault(); // Impede o envio padrão do formulário

                const nameInput = document.getElementById('name');
                const emailInput = document.getElementById('email');
                const messageTextarea = document.getElementById('message');

                let isValid = true;
                let errorMessage = '';

                // Validação de nome
                if (nameInput.value.trim() === '') {
                    isValid = false;
                    errorMessage += 'Por favor, digite seu nome.\n';
                }

                // Validação de email
                if (emailInput.value.trim() === '') {
                    isValid = false;
                    errorMessage += 'Por favor, digite seu email.\n';
                } else if (!isValidEmail(emailInput.value.trim())) {
                    isValid = false;
                    errorMessage += 'Por favor, digite um email válido.\n';
                }

                // Validação de mensagem
                if (messageTextarea.value.trim() === '') {
                    isValid = false;
                    errorMessage += 'Por favor, digite sua mensagem.\n';
                }

                if (!isValid) {
                    alert('Erro no formulário:\n' + errorMessage);
                } else {
                    alert('Mensagem enviada com sucesso! Entraremos em contato em breve.');
                    contactForm.reset(); // Limpa o formulário após o envio
                }
            });

            function isValidEmail(email) {
                // Regex simples para validação de email
                return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
            }

            // Funcionalidade do Menu Hambúrguer para Mobile
            if (hamburgerMenu && navUl) {
                hamburgerMenu.addEventListener('click', () => {
                    navUl.classList.toggle('active'); // Alterna a classe 'active' para mostrar/esconder o menu
                });
            }

            // Exibir a seção 'hero' por padrão ao carregar a página
            // E garantir que o link "Home" esteja ativo
            showSection('#hero');
            activateNavLink('#hero');
        });
    </script>
</body>
</html>
