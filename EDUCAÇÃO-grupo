document.addEventListener('DOMContentLoaded', () => {
    const mainSectionsContainer = document.querySelector('.main-sections-container');
    const sections = document.querySelectorAll('.page-section');
    const navItems = document.querySelectorAll('.section-nav li');
    const mainNavLinks = document.querySelectorAll('nav ul li a'); // Links da navegação principal

    let currentSectionIndex = 0;
    let isTransitioning = false; // Flag para evitar múltiplas transições rápidas

    // Função para mostrar a seção
    function showSection(index) {
        // Evita transição se já estiver transicionando, ou se o índice for o mesmo/inválido
        if (isTransitioning || index === currentSectionIndex || index < 0 || index >= sections.length) {
            return;
        }

        isTransitioning = true;

        // Remove a classe 'active' de todas as seções e itens de navegação
        sections.forEach(s => s.classList.remove('active'));
        navItems.forEach(item => item.classList.remove('active'));
        mainNavLinks.forEach(link => link.classList.remove('active-nav'));

        // Adiciona a classe 'active' à seção e navegação corretas
        sections[index].classList.add('active');
        navItems[index].classList.add('active');
        
        // Ativa o link na navegação principal correspondente à seção
        const targetSectionId = sections[index].id;
        const activeNavLink = document.querySelector(`nav ul li a[data-section-id="${targetSectionId}"]`);
        if (activeNavLink) {
            activeNavLink.classList.add('active-nav');
        }

        currentSectionIndex = index;

        // Permite nova transição após a animação (ajuste o tempo para corresponder ao seu CSS)
        setTimeout(() => {
            isTransitioning = false;
        }, 900); // O tempo (900ms) deve ser um pouco maior que o tempo da transição no CSS (0.8s)
    }

    // Navegação por bolinhas laterais
    navItems.forEach((item, index) => {
        item.addEventListener('click', () => {
            showSection(index);
        });
    });

    // Navegação principal (topo)
    mainNavLinks.forEach(link => {
        link.addEventListener('click', (event) => {
            event.preventDefault(); // Impede o comportamento padrão de âncora
            const targetId = link.getAttribute('data-section-id');
            const targetSection = document.getElementById(targetId);
            if (targetSection) {
                const index = Array.from(sections).indexOf(targetSection);
                showSection(index);
            }
        });
    });

    // Navegação por roda do mouse/trackpad (scroll)
    let scrollTimeout;
    document.addEventListener('wheel', (event) => {
        // Debounce para evitar múltiplos eventos de roda do mouse disparando transições rápidas
        clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(() => {
            if (event.deltaY > 0) {
                // Rolar para baixo (próxima seção)
                showSection(currentSectionIndex + 1);
            } else {
                // Rolar para cima (seção anterior)
                showSection(currentSectionIndex - 1);
            }
        }, 100); // Pequeno atraso para agrupar eventos de rolagem
    }, { passive: false }); // Usar passive: false para poder usar preventDefault() se necessário (não usado aqui, mas boa prática)

    // Navegação por setas do teclado
    document.addEventListener('keydown', (event) => {
        if (event.key === 'ArrowDown') {
            showSection(currentSectionIndex + 1);
            event.preventDefault(); // Previne o comportamento padrão de rolagem do navegador
        } else if (event.key === 'ArrowUp') {
            showSection(currentSectionIndex - 1);
            event.preventDefault(); // Previne o comportamento padrão de rolagem do navegador
        }
    });

    // Exibir a primeira seção ao carregar (e sincronizar navs)
    showSection(0);
});
